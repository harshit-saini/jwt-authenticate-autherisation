<div class="container mt-5">
    <div class="row d-flex">

        <div class="col-lg-4">

            <form class="border rounded-lg bg-light p-3" style="max-width: 500px;" action="/api/signUp" method="POST">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input class="form-control" type="text" name="name" id="name">
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input class="form-control" type="email" name="email" id="email">
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input class="form-control" type="password" name="password" id="password">

                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirm Password:</label>
                    <input class="form-control" type="password" name="confirmPassword" id="confirmPassword">
                </div>
                <button class="btn btn-primary" type="submit">Sign Up</button>
            </form>

        </div>
        <div class="d-lg-none" style="height: 50px; width: 100%;"></div>
        <div class="col-lg-8 text-center">
            <p class="display-1">This Is The SignUp Page</p>
            <p class="h2">Please SignUp</p>
        </div>

    </div>
</div>